\ProvidesPackage{macros}[Macros]

\RequirePackage{kvoptions}

% Key value options
\SetupKeyvalOptions{%
  family = macros,
  prefix = macros@
}

% Redefine exponential option
\DeclareBoolOption{exp}

% Process key values options
\ProcessKeyvalOptions*

